{
    "name": "monorepo",
    "private": true,
    "workspaces": [
      "packages/*"
    ],
    "scripts": {
      "lib:watch": "yarn workspace vue-winbox run build:watch",
      "lib": "yarn workspace vue-winbox",
      "example": "yarn workspace example",
      "clean:modules": "rm -rf node_modules && rm -rf packages/lib/node_modules && rm -rf packages/example/node_modules",
      "copy:readme": "cp README.md packages/lib/README.md"
    }
}